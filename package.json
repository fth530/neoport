{
    "name": "portfolio-app",
    "version": "1.0.0",
    "description": "Yatırım Portföy Takip Uygulaması",
    "main": "server.js",
    "scripts": {
        "start": "node server.js",
        "dev": "cross-env NODE_ENV=development node server.js",
        "prod": "cross-env NODE_ENV=production pm2 start ecosystem.config.js --env production",
        "docker:build": "docker build -t neoport-app .",
        "docker:up": "docker-compose up -d",
        "docker:down": "docker-compose down",
        "backup": "chmod +x scripts/backup.sh && ./scripts/backup.sh",
        "backup:docker": "docker-compose exec app npm run backup",
        "test": "node test-api.js",
        "test:security": "node test-security.js",
        "test:performance": "node test-performance.js",
        "test:integrity": "node test-integrity.js",
        "test:functional": "node test-functional.js",
        "test:realtime": "node test-realtime.js",
        "test:analytics": "node test-analytics.js",
        "test:ux": "node test-ux.js",
        "test:alerts": "node test-alerts.js",
        "test:security-advanced": "node test-security-advanced.js",
        "test:all": "node run-all-tests.js"
    },
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=9.0.0"
    },
    "dependencies": {
        "archiver": "^7.0.1",
        "axios": "^1.13.2",
        "compression": "^1.8.1",
        "cors": "^2.8.5",
        "dotenv": "^17.2.3",
        "express": "^4.18.2",
        "express-rate-limit": "^8.2.1",
        "express-validator": "^7.3.1",
        "helmet": "^8.1.0",
        "mathjs": "^15.1.0",
        "node-cron": "^4.2.1",
        "pm2": "^5.3.0",
        "simple-statistics": "^7.8.8",
        "socket.io": "^4.8.3",
        "socket.io-client": "^4.8.3",
        "sql.js": "^1.10.3",
        "swagger-jsdoc": "^6.2.8",
        "swagger-ui-express": "^5.0.1"
    },
    "devDependencies": {
        "cross-env": "^7.0.3",
        "jest": "^30.2.0",
        "jest-environment-jsdom": "^30.2.0"
    }
}
